<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:background="@drawable/dark_back" >

    <!-- - - - - - - - - -ЗАГОЛОВОК - - - - - - - - - -->
	
    <EditText
        android:id="@+id/LayOrder_ancor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/LayOrder_img_captio_car"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/ImageView01"
        android:background="@drawable/order_caption_img_car"
        android:contentDescription="@string/description" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/LayOrder_img_captio_car"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/LayOrder_ancor"
        android:background="@drawable/order_caption_img_txt"
        android:contentDescription="@string/description" />
    <!-- - - - - - - - - КОНЕЦ ЗАГОЛОВКА - - - - - - - - - -->

    <Spinner
        android:id="@+id/LayOrder_ed_txt_city"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/LayOrder_img_captio_car"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_input" />

    <ImageView
        android:id="@+id/LayOrder_star_city"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@+id/LayOrder_img_captio_car"
        android:layout_toRightOf="@+id/LayOrder_ed_txt_city"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <EditText
        android:id="@+id/LayOrder_ed_txt_taxi_serv"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_below="@+id/LayOrder_ed_txt_city"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_input"
        android:hint="Выбор службы такси" />

    <ImageView
        android:id="@+id/LayOrder_btn_hint_telephone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/LayOrder_ed_txt_city"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/LayOrder_ed_txt_taxi_serv"
        android:background="@drawable/order_telphone_btn"
        android:contentDescription="@string/description" />

    <ImageView
        android:id="@+id/LayOrder_star_serv"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/LayOrder_btn_hint_telephone"
        android:layout_toRightOf="@+id/LayOrder_btn_hint_telephone"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <EditText
        android:id="@+id/LayOrder_ed_txt_from"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_below="@+id/LayOrder_btn_hint_telephone"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/LayOrder_star_city"
        android:background="@drawable/text_input"
        android:hint="Откуда ехать?" />

    <ImageView
        android:id="@+id/LayOrder_star_from"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@+id/LayOrder_btn_hint_telephone"
        android:layout_toRightOf="@+id/LayOrder_ed_txt_from"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <EditText
        android:id="@+id/LayOrder_ed_txt_to"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_alignRight="@+id/LayOrder_ed_txt_comment"
        android:layout_below="@+id/LayOrder_btn_from_home"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_input"
        android:hint="Куда ехать?" />

    <ImageView
        android:id="@+id/LayOrder_star_to"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@+id/LayOrder_btn_from_home"
        android:layout_toRightOf="@+id/LayOrder_ed_txt_to"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <EditText
        android:id="@+id/LayOrder_ed_txt_comment"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_below="@+id/LayOrder_btn_to_home"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_input"
        android:hint="Коментарии" />

    <EditText
        android:id="@+id/LayOrder_ed_txt_number"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_below="@+id/LayOrder_ed_txt_comment"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_input"
        android:hint="Телефон"
        android:inputType="number" />

    <ImageView
        android:id="@+id/LayOrder_star_number"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@+id/LayOrder_ed_txt_comment"
        android:layout_toRightOf="@+id/LayOrder_ed_txt_number"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_from"
        android:layout_below="@+id/LayOrder_ed_txt_from"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/ImageView01"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/LayMain_hint_addr_home"
        android:paddingBottom="3dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/EditText02"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/EditText01"
        android:layout_alignBottom="@+id/EditText01"
        android:layout_toLeftOf="@+id/LayOrder_star_to"
        android:layout_toRightOf="@+id/EditText01"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/LayMain_hint_addr_corp" />

    <EditText
        android:id="@+id/EditText04"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_to"
        android:layout_alignRight="@+id/EditText01"
        android:layout_below="@+id/LayOrder_ed_txt_to"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="form3" />

    <EditText
        android:id="@+id/EditText03"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/EditText04"
        android:layout_alignBottom="@+id/EditText04"
        android:layout_alignRight="@+id/LayOrder_ed_txt_comment"
        android:layout_toRightOf="@+id/EditText04"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="form2"
        android:paddingBottom="3dp" />

    <ImageView
        android:id="@+id/LayOrder_btn_from_home"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@+id/EditText01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/order_to_home_btn" />

    <ImageView
        android:id="@+id/LayOrder_btn_add_adr"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/LayOrder_btn_to_home"
        android:layout_toRightOf="@+id/LayOrder_btn_from_home"
        android:background="@drawable/order_add_adr"
        android:onClick="add_adr"/>

    <ImageView
        android:id="@+id/LayOrder_btn_to_home"
        android:layout_width="28dp"
        android:layout_height="38dp"
        android:layout_below="@+id/EditText04"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/LayOrder_btn_from_home"
        android:background="@drawable/order_to_home_btn" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignRight="@+id/LayOrder_star_number"
        android:layout_below="@+id/LayOrder_ed_txt_number"
        android:background="@drawable/order_ord_tx_btn"
        android:onClick="OrderButton_click" />


    
</RelativeLayout>

</ScrollView>