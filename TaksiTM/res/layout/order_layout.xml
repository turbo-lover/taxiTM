<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"



    android:background="#425562" >

    <!-- - - - - - - - - -ЗАГОЛОВОК - - - - - - - - - -->
	
    <EditText
        android:id="@+id/LayOrder_ancor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/LayOrder_img_captio_car"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/ImageView01"
        android:background="@drawable/order_caption_img_car"
        android:contentDescription="@string/description" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/LayOrder_img_captio_car"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/LayOrder_ancor"
        android:background="@drawable/order_caption_img_txt"
        android:contentDescription="@string/description" />
    <!-- - - - - - - - - КОНЕЦ ЗАГОЛОВКА - - - - - - - - - -->

    <Spinner
        android:id="@+id/LayOrder_ed_txt_city"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/LayOrder_img_captio_car"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_input" />

    <ImageView
        android:id="@+id/LayOrder_star_city"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@+id/LayOrder_img_captio_car"
        android:layout_toRightOf="@+id/LayOrder_ed_txt_city"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <Spinner
        android:id="@+id/LayOrder_sp_txt_taxi_serv"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_below="@+id/LayOrder_ed_txt_city"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_input"
        />

    <ImageView
        android:id="@+id/LayOrder_btn_hint_telephone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/LayOrder_ed_txt_city"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/LayOrder_sp_txt_taxi_serv"
        android:background="@drawable/order_telphone_btn"
        android:contentDescription="@string/description" />

    <ImageView
        android:id="@+id/LayOrder_star_serv"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/LayOrder_btn_hint_telephone"
        android:layout_toRightOf="@+id/LayOrder_btn_hint_telephone"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <AutoCompleteTextView
        android:id="@+id/LayOrder_from_txt"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_below="@+id/LayOrder_btn_hint_telephone"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/LayOrder_star_city"
        android:background="@drawable/text_input"
        android:hint="Откуда ехать?" />

    <ImageView
        android:id="@+id/LayOrder_star_from"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@+id/LayOrder_btn_hint_telephone"
        android:layout_toRightOf="@+id/LayOrder_from_txt"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <EditText
        android:id="@+id/LayOrder_ed_txt_comment"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_below="@+id/LayOrder_btn_to_home"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_input"
        android:hint="Коментарии" />

    <EditText
        android:id="@+id/LayOrder_number"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/LayOrder_ed_txt_city"
        android:layout_below="@+id/LayOrder_ed_txt_comment"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/text_input"
        android:hint="Телефон"
        android:inputType="phone"
        android:paddingLeft="30dp"/>

    <ImageView
        android:id="@+id/LayOrder_star_number"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@+id/LayOrder_ed_txt_comment"
        android:layout_toRightOf="@+id/LayOrder_number"
        android:background="@drawable/star_white"
        android:contentDescription="@string/description" />

    <EditText
        android:id="@+id/LayOrder_from_house"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/LayMain_hint_addr_home"
        android:paddingBottom="3dp"
        android:layout_below="@+id/LayOrder_from_txt"
        android:layout_toLeftOf="@+id/ImageView01"
        android:layout_alignLeft="@+id/LayOrder_from_txt"
        android:layout_marginRight="5dp">

    </EditText>

    <EditText
        android:id="@+id/LayOrder_from_corp"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/LayMain_hint_addr_corp"
        android:layout_alignTop="@+id/LayOrder_from_house"
        android:layout_toLeftOf="@+id/LayOrder_star_from"
        android:layout_toRightOf="@+id/LayOrder_ancor"
        android:layout_marginLeft="5dp"/>



    <ImageView
        android:id="@+id/LayOrder_btn_from_home"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@+id/LayOrder_from_house"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/order_to_home_btn"
            android:onClick="from_home"/>

    <Button
        android:id="@+id/LayOrder_btn_add_adr"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/LayOrder_btn_to_home"
        android:layout_toRightOf="@+id/LayOrder_btn_from_home"
        android:onClick="add_adr"
        android:background="@drawable/order_add_adr"/>

    <ImageView
        android:id="@+id/LayOrder_btn_to_home"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@drawable/order_to_home_btn"
        android:layout_toLeftOf="@+id/LayOrder_btn_from_home"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/LayOrder_linear_destination"
        android:src="@drawable/order_to_home_btn"
        android:layout_marginRight="30dp"
        android:onClick="to_home"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="-20dp"
        android:layout_alignRight="@+id/LayOrder_star_number"

        android:layout_below="@+id/LayOrder_number"
        android:background="@drawable/order_ord_tx_btn"
        android:onClick="OrderButton_click" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LayOrder_btn_from_home"
            android:id="@+id/LayOrder_linear_destination"
            android:minHeight="50dp"
            android:layout_alignRight="@+id/LayOrder_ed_txt_comment"
            android:layout_alignLeft="@+id/LayOrder_ed_txt_comment">


    </LinearLayout>

    <Button
            android:id="@+id/LayOrder_rem_btn"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:background="@drawable/order_rem_adr"
            android:layout_alignTop="@+id/LayOrder_btn_add_adr"
            android:layout_alignLeft="@+id/imageView1"
            android:onClick="rem_adr"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+7"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:layout_below="@+id/LayOrder_star_number"
            android:layout_alignLeft="@+id/LayOrder_number"
            android:layout_marginLeft="5dp"/>

    <ImageView
            android:id="@+id/by_city"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/order_by_city_btn"
            android:layout_alignTop="@+id/LayOrder_btn_add_adr"
            android:layout_toLeftOf="@+id/LayOrder_btn_add_adr"
            android:layout_marginRight="10dp"
            android:onClick="by_city"/>


</RelativeLayout>
</ScrollView>